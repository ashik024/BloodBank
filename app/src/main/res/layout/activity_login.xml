<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/welcomeimg"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/wlcom2"/>


    <RelativeLayout
        android:id="@+id/cardRela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/welcomeimg">


        <TextView
            android:id="@id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />
        <EditText
            android:id="@+id/LogEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:backgroundTint="#B8B4B4"
            android:hint="ashik@gmail.com"
            android:padding="10dp"
            android:background="@drawable/round_cornerswhite"
            android:layout_marginLeft="20dp"
            android:inputType="textEmailAddress"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/LogEmail"/>

        <EditText
            android:id="@+id/LogPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:backgroundTint="#B8B4B4"
            android:hint="****"
            android:padding="10dp"
            android:background="@drawable/round_cornerswhite"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp" />
        <Button
            android:id="@+id/startbtn12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Login"
            android:background="@drawable/round_corners"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/LogPass"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/Logtext11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Forgot Password"
            android:textSize="15dp"
            android:layout_below="@id/startbtn12"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Don't Have an Account?"
            android:textSize="15dp"
            android:layout_below="@id/Logtext11"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/Logtext13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sign Up"
            android:textSize="15dp"
            android:layout_below="@id/Logtext11"
            android:textColor="@color/black"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            />
    </RelativeLayout>




</RelativeLayout>